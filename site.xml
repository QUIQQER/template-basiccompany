<?xml version="1.0" encoding="UTF-8"?>
<site>
    <!-- global attributes -->
    <attributes>
        <attribute>templateBasicCompany.showEmotion</attribute>
        <attribute>templateBasicCompany.showTitle</attribute>
        <attribute>templateBasicCompany.showShort</attribute>
    </attributes>

    <settings>
        <category name="templateBasicCompany.siteSettings">
            <settings>
                <title>
                    <locale group="quiqqer/template-basiccompany"
                            var="siteSettings"/>
                </title>

                <!-- show header / emotion -->
                <select conf="templateBasicCompany.showEmotion">
                    <text>
                        <locale group="quiqqer/template-basiccompany"
                                var="siteSettings.showEmotion"/>
                    </text>
                    <option value="default">
                        <locale group="quiqqer/template-basiccompany"
                                var="siteSettings.showEmotion.default"/>
                    </option>
                    <option value="show">
                        <locale group="quiqqer/template-basiccompany"
                                var="siteSettings.showEmotion.show"/>
                    </option>
                    <option value="hide">
                        <locale group="quiqqer/template-basiccompany"
                                var="siteSettings.showEmotion.hide"/>
                    </option>
                </select>


                <input conf="templateBasicCompany.showTitle" type="checkbox">
                    <text>
                        <locale group="quiqqer/template-basiccompany" var="siteSettings.showTitle"/>
                    </text>
                </input>
                <input conf="templateBasicCompany.showShort" type="checkbox">
                    <text>
                        <locale group="quiqqer/template-basiccompany" var="siteSettings.showShort"/>
                    </text>
                </input>
            </settings>
        </category>
    </settings>

    <layouts>
        <layout type="layout/startPage"
                image="bin/layouts/startPage.png">
            <title>
                <locale group="quiqqer/template-basiccompany" var="admin.layout.startpage" />
            </title>
            <description>
                <locale group="quiqqer/template-basiccompany" var="admin.layout.startpage.desc" />
            </description>
        </layout>

        <layout type="layout/noSidebar"
                image="bin/layouts/noSidebar.png">
            <title>
                <locale group="quiqqer/template-basiccompany" var="admin.layout.noSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-basiccompany" var="admin.layout.noSidebar.desc" />
            </description>
        </layout>

        <layout type="layout/leftSidebar"
                image="bin/layouts/leftSidebar.png">
            <title>
                <locale group="quiqqer/template-basiccompany" var="admin.layout.leftSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-basiccompany" var="admin.layout.leftSidebar.desc" />
            </description>
        </layout>

        <layout type="layout/rightSidebar"
                image="bin/layouts/rightSidebar.png">
            <title>
                <locale group="quiqqer/template-basiccompany" var="admin.layout.rightSidebar" />
            </title>
            <description>
                <locale group="quiqqer/template-basiccompany" var="admin.layout.rightSidebar.desc" />
            </description>
        </layout>
    </layouts>

</site>
