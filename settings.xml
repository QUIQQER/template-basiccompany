<?xml version="1.0" encoding="UTF-8"?>
<quiqqer>
    <project>

        <settings>
            <config>
                <section name="templateBasicCompany.settings">
                    <conf name="logo">
                        <type><![CDATA[string]]></type>
                    </conf>
                    <conf name="noHeaderNoSidebar">
                        <type><![CDATA[bool]]></type>
                    </conf>
                    <conf name="noHeaderLeftSidebar">
                        <type><![CDATA[bool]]></type>
                    </conf>
                    <conf name="noHeaderRightSidebar">
                        <type><![CDATA[bool]]></type>
                    </conf>
                    <conf name="colorFooterBackground">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#414141</defaultvalue>
                    </conf>
                    <conf name="colorFooterFont">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#D1D1D1</defaultvalue>
                    </conf>
                    <conf name="colorFooterLinks">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#E6E6E6</defaultvalue>
                    </conf>
                    <conf name="colorMain">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#DD151B</defaultvalue>
                    </conf>
                    <conf name="colorBackground">
                        <type><![CDATA[string]]></type>
                        <defaultvalue>#F7F7F7</defaultvalue>
                    </conf>
                </section>
            </config>

            <window>
                <categories>
                    <category name="templateBasicCompany">
                        <text>
                            <locale group="quiqqer/template-basiccompany"
                                    var="templateBasicCompany.settings.menu.title"
                                    />
                        </text>
                        <icon>URL_BIN_DIR/22x22/quiqqer.png</icon>

                        <settings title="templateBasicCompany.settings" name="templateBasicCompany.settings.logo">
                            <title>
                                <locale group="quiqqer/template-basiccompany" var="templateBasicCompany.settings.logo.title" />
                            </title>
                            <input conf="templateBasicCompany.settings.logo" class="media-image">
                                <text>
                                    <locale group="quiqqer/template-basiccompany" var="templateBasicCompany.settings.logo.text" />
                                </text>
                                <description>
                                    <locale group="quiqqer/template-basiccompany" var="templateBasicCompany.settings.logo.description" />
                                </description>
                            </input>
                        </settings>

                        <!-- MenÃ¼position -->
                        <settings title="templateBasicCompany.settings" name="templateBasicCompany.settings.navPos">
                            <title>
                                <locale group="quiqqer/template-basiccompany"
                                        var="template.settings.navPos.title"
                                        />
                            </title>
                            <select conf="templateHelios.settings.pageMenuPos">
                                <text>
                                    <locale group="quiqqer/template-basiccompany"
                                            var="template.settings.navPos.text"
                                            />
                                </text>
                                <option value="fix">
                                    <locale group="quiqqer/template-basiccompany"
                                            var="template.settings.navPos.fix"
                                            />
                                </option>
                                <option value="scroll">
                                    <locale group="quiqqer/template-basiccompany"
                                            var="template.settings.navPos.scroll"
                                            />
                                </option>
                            </select>
                        </settings>

                        <settings title="templateBasicCompany.settings" name="templateBasicCompany.header.settings">
                            <title>
                                <locale group="quiqqer/template-basiccompany" var="templateBasicCompany.header.settings.text" />
                            </title>

                            <input conf="templateBasicCompany.settings.noHeaderNoSidebar" type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-basiccompany" var="noHeaderNoSidebar.text" />
                                </text>
                            </input>
                            <input conf="templateBasicCompany.settings.noHeaderLeftSidebar" type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-basiccompany" var="noHeaderLeftSidebar.text" />
                                </text>
                            </input>
                            <input conf="templateBasicCompany.settings.noHeaderRightSidebar" type="checkbox">
                                <text>
                                    <locale group="quiqqer/template-basiccompany" var="noHeaderRightSidebar.text" />
                                </text>
                            </input>
                        </settings>

                        <!-- Colors -->
                        <settings title="templateBasicCompany.settings" name="templateBasicCompany.settings.color">
                            <title>
                                <locale group="quiqqer/template-basiccompany" var="templateBasicCompany.settings.color.title" />
                            </title>

                            <input conf="templateBasicCompany.settings.colorFooterBackground" type="color">
                                <text>
                                    <locale group="quiqqer/template-basiccompany"
                                            var="template.settings.colorFooterBackground.text"
                                            />
                                </text>
                            </input>
                            <input conf="templateBasicCompany.settings.colorFooterFont" type="color">
                                <text>
                                    <locale group="quiqqer/template-basiccompany"
                                            var="template.settings.colorFooterFont.text"
                                            />
                                </text>
                            </input>
                            <input conf="templateBasicCompany.settings.colorFooterLinks" type="color">
                                <text>
                                    <locale group="quiqqer/template-basiccompany"
                                            var="template.settings.colorFooterLinks.text"
                                            />
                                </text>
                            </input>
                            <input conf="templateBasicCompany.settings.colorMain" type="color">
                                <text>
                                    <locale group="quiqqer/template-basiccompany"
                                            var="template.settings.colorMain.text"
                                            />
                                </text>
                                <description>
                                    <locale group="quiqqer/template-basiccompany"
                                            var="template.settings.colorMain.description"
                                            />
                                </description>
                            </input>
                            <input conf="templateBasicCompany.settings.colorBackground" type="color">
                                <text>
                                    <locale group="quiqqer/template-basiccompany"
                                            var="template.settings.colorBackground.text"
                                            />
                                </text>
                            </input>
                        </settings>

                    </category>
                </categories>

            </window>
        </settings>

        <wysiwyg class="page-content">
            <css src="//fonts.googleapis.com/css?family=Open+Sans:400,700,400italic"/>
            <css src="URL_OPT_DIR/quiqqer/template-basiccompany/bin/css/style.css"/>
        </wysiwyg>

    </project>
</quiqqer>